@model ZavrsniLuksic.Model.Dish

<div class="form-group">
    <label class="control-label">Ime</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Opis</label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>



<div class="form-group">
    <label class="control-label">Cijena (HRK)</label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>


<div class="form-group">
    <label class="control-label">Restoran</label>
    <select asp-for="RestaurantID" asp-items="ViewBag.Restaurants" class="form-control"></select>
    <span asp-validation-for="RestaurantID" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Stupanj ljutosti</label>
    <select asp-for="SpicinessID" asp-items="ViewBag.Spicinesses" class="form-control"></select>
    <span asp-validation-for="SpicinessID" class="text-danger"></span>
</div>

<div class="form-group">
    <input type="submit" value="Spremi" class="btn btn-outline-success" style="background-color: #26112b; color: white; border-color: #26112b;" />
</div>

