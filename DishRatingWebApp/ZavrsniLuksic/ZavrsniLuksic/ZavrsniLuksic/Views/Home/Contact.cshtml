@{
    ViewData["Title"] = "Contact page";
}

<div class="row">
	<div class="col-md-12  mx-auto">
		<h2>Tko pita - ne skita!</h2>
		<!-- Button trigger modal -->
		<button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#contact-modal" style="background-color: #26112b; color: white; border-color: #26112b;">
			Ispuni obrazac
		</button>
	</div>
</div>

<form action="/Home/SubmitQuery" method="post">
	<!-- Modal -->
	<div class="modal fade" id="contact-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Kontakt forma</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-sm-6">
							<div class="form-group">
								<label for="ime">Ime</label>
								<input type="text" class="form-control" placeholder="Unesite ime" name="ime">
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<label for="prezime">Prezime</label>
								<input type="text" class="form-control" placeholder="Unesite prezime" name="prezime">
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="email" class="control-label">Email</label>
						<input type="email" class="form-control" placeholder="Unesite email" name="email">
					</div>
					<div class="form-group">
						<label for="poruka" class="control-label">Poruka</label>
						<textarea class="form-control" rows="5" name="poruka"></textarea>
					</div>
					<div class="form-group">
						<label for="tip" class="control-label">Tip upita</label>
						<select name="tip" class="form-control">
							<option value="Pohvala">Pohvala</option>
							<option value="Upit">Upit</option>
							<option value="Poslovni prijedlog">Poslovni prijedlog</option>
							<option value="Žalba">Žalba</option>
						</select>
					</div>
					<div class="row">
						<div class="col-sm-8">
							<div class="checkbox">
								<label>
									<input type="checkbox" name="newsletter" value="true" />
									Želim primati newsletter
								</label>
								<input type="hidden" name="newsletter" value="false" />
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary" style="background-color: #26112b; color: white; border-color: #26112b;">Pošalji upit!</button>
				</div>
			</div>
		</div>
	</div>
</form>
